# Application
NODE_ENV=development
PORT=3000
APP_NAME=HistoRando API

# Database Configuration
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_NAME=histo_rando
DB_DATABASE=histo_rando
DB_LOGGING=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Admin Promotion Secret Key
# This secret key is used for the /auth/promote-to-admin endpoint
# Set this to a strong random string in production
ADMIN_PROMOTION_SECRET=change-this-to-a-strong-random-secret-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# CORS
CORS_ORIGIN=http://localhost:3001

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
